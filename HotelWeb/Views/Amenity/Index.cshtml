@model IEnumerable<Amenity>
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"><i class="bi bi-view-stacked"></i> Amenity List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-4">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Amenity" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i>  Create New Amenity 
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Villa Name
                    </th>
                    <th>
                        Amenity Name
                    </th>
                    <th>
                        Description
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Villa.Name</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Amenity" asp-action="Update" asp-route-amentityId="@item.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Amenity" asp-action="Delete" asp-route-amentityId="@item.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

